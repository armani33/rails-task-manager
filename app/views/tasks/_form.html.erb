<div class="form-container">
  <div class="form-card">
    <%= link_to tasks_path do %>
    <i class='fas fa-times'></i>
    <% end %>
    <%= form_for(@task) do |f| %>
    <%= f.label :title, class: "" %>:
    <%= f.text_field :title %><br />

    <%= f.label :details %>:
    <%= f.text_field :details %><br />

    <%= f.label :completed %>:
    <%= f.check_box :completed %><br />

    <%= f.submit %>
    <% end %>
  </div>
</div>

