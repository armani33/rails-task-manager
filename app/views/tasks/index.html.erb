<%= link_to("New tasks", tasks_new_path, {id: "button-new"}) %>
<%= link_to("Home", tasks_path, {id: "button-home"}) %>
<div class="cards">
  <% @tasks.each do |task| %>
  <%= link_to task_path(task) do %>
    <div class="<%= task.completed ? 'card complete' : 'card' %>">
      <h3><%= task.title %></h3>
      <p><%= task.details %></p>
      <%= link_to('Update', edit_path(task), {id: "update-button"}) %>
    </div>
    <% end %>

  <%end %>
</div>

